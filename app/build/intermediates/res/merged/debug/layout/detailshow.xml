<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" android:background="@drawable/batang">
	
	<ImageView
        android:visibility="gone"
	    android:id="@+id/tel"
	    android:layout_width="680dp"
	     android:layout_height="60dp"
	     android:paddingLeft="18dp"
	     android:layout_alignParentLeft="true"
	     android:layout_alignParentBottom="true">
	</ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/page_back2"/>
    </LinearLayout>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        android:visibility="gone"
        >
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginBottom="15dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate2"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:layout_marginLeft="5dp"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginRight="6dp"
		    />
    </LinearLayout>
	<LinearLayout 
	    android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="23dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_lock_on"/>
        <ImageView
            android:id="@+id/imgNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_net_on"/>
     </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/title_number"/>
    </LinearLayout>
	<LinearLayout
        android:id="@+id/mainLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/imgPop"
                    android:layout_width="360dp"
                    android:layout_height="520dp"
                    android:layout_marginRight="34dp"
                    android:scaleType="fitXY"/>
                <LinearLayout
                    android:id="@+id/rl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/view_drama_back"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:layout_marginTop="1dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/menuTitle"
                                android:layout_width="390dp"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="3dp"
                                android:maxLines="1"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drama_date"
                                />
                            <TextView
                                android:id="@+id/txtDate"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:lineSpacingExtra="3dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:textColor="#ffffff"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drama_grade"
                                />
                            <TextView
                                android:id="@+id/txtAge"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:lineSpacingExtra="3dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:maxLines="1"
                                android:textColor="#ffffff"
                                />

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drama_director"
                                />
                            <TextView
                                android:id="@+id/txtDirector"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:lineSpacingExtra="3dp"
                                android:maxLines="1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drama_actor"
                                />
                            <TextView
                                android:id="@+id/txtCast"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:lineSpacingExtra="3dp"
                                android:maxLines="1"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="#ffffff"
                                />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drama_story"
                                />
                            <TextView
                                android:id="@+id/txtStory"
                                android:layout_width="300dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:lineSpacingExtra="3dp"
                                android:maxLines="6"
                                android:textColor="#ffffff"
                                />
                        </LinearLayout>
                        </LinearLayout>
                    <LinearLayout
                        android:id="@+id/middleLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TableLayout android:id="@+id/buttonLayout"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/drama_top_label"
                                android:layout_marginBottom="70dp"
                                />
                            <TableRow>
                                <Button android:id="@+id/detailshowbtn0"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:background="@drawable/drama_detail_button"
                                    android:layout_marginRight="1dp"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:layout_marginBottom="1dp"
                                    />
                                <Button android:id="@+id/detailshowbtn1"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button"
                                    android:layout_marginRight="1dp"
                                    />
                                <Button android:id="@+id/detailshowbtn2"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button"
                                    android:layout_marginRight="1dp"/>
                                <Button android:id="@+id/detailshowbtn3"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button"
                                    android:layout_marginRight="1dp"/>
                                <Button android:id="@+id/detailshowbtn4"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:nextFocusRight="@+id/detailshowbtn5"
                                    android:background="@drawable/drama_detail_button" />
                            </TableRow>
                            <TableRow>
                                <Button android:id="@+id/detailshowbtn5"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:layout_marginRight="1dp"
                                    android:layout_marginBottom="1dp"
                                    android:nextFocusLeft="@+id/detailshowbtn4"
                                    android:background="@drawable/drama_detail_button"
                                    />
                                <Button android:id="@+id/detailshowbtn6"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:layout_marginRight="1dp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button" />
                                <Button android:id="@+id/detailshowbtn7"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="1dp"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button" />
                                <Button android:id="@+id/detailshowbtn8"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="1dp"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button" />
                                <Button android:id="@+id/detailshowbtn9"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:nextFocusRight="@+id/detailshowbtn10"
                                    android:background="@drawable/drama_detail_button" />
                            </TableRow>
                            <TableRow
                                android:layout_marginBottom="85dp">
                                <Button android:id="@+id/detailshowbtn10"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:layout_marginRight="1dp"
                                    android:nextFocusLeft="@+id/detailshowbtn9"
                                    android:background="@drawable/drama_detail_button" />
                                <Button android:id="@+id/detailshowbtn11"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="1dp"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button" />
                                <Button android:id="@+id/detailshowbtn12"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="1dp"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button" />
                                <Button android:id="@+id/detailshowbtn13"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:layout_marginRight="1dp"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button" />
                                <Button android:id="@+id/detailshowbtn14"
                                    android:layout_width="69dp"
                                    android:layout_height="69dp"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:textColor="#ffffff"
                                    android:background="@drawable/drama_detail_button" />
                            </TableRow>
                        </TableLayout>
                    </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>
</RelativeLayout>