<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	android:orientation="horizontal"
	tools:context=".Constant" >

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:focusable="false"
		android:background="@drawable/movie_play_bg1"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_gravity="center"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/adLeft"
				android:layout_width="340dp"
				android:layout_height="450dp"
				android:layout_marginRight="20dp"
				android:scaleType="fitXY"
				android:focusable="false" />

			<Button
				android:id="@+id/adLeft2"
				android:visibility="gone"
				android:layout_marginTop="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/ad_left"
				android:focusable="false" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/rl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:orientation="vertical"
			android:background="#7E7F81">
			<Button android:id="@+id/movieplay"
				android:layout_width="wrap_content"
				 android:layout_height="225dp"
				 android:layout_marginTop="1dp"
				 android:background="@drawable/movieplay"
				 />
			<Button android:id="@+id/movieadd"
				android:layout_width="wrap_content"
				 android:layout_height="225dp"
				 android:layout_marginBottom="1dp"
				 android:background="@drawable/delete"
				 />

		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical"

			android:gravity="right">
			<ImageView
				android:id="@+id/adRight"
				android:layout_width="340dp"
				android:layout_height="450dp"
				android:focusable="false"
				android:scaleType="fitXY"
				android:layout_marginLeft="20dp"/>
			<Button
				android:id="@+id/adRight2"
				android:visibility="gone"
				android:layout_marginTop="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/ad_right"
				android:focusable="false" />
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:focusable="false"
		android:layout_alignParentBottom="true"
		android:background="@drawable/movie_play_bg2"/>
</RelativeLayout>

