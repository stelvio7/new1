<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true">
    <LinearLayout
        android:id="@+id/ll1"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">
            <ImageView
                android:id="@+id/ivNowBroad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nowbroad" />
            <TextView
                android:id="@+id/txtNowBroad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginLeft="10dp"
                android:text="현재방송"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/ivLine1"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:focusable="false"
            android:layout_gravity="center"
            android:background="@drawable/broadmenu_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:focusable="false"
            android:padding="8dp">
            <ImageView
                android:id="@+id/ivNowChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:background="@drawable/nowchannel" />
            <TextView
                android:layout_weight="1"
                android:id="@+id/txtNowChannel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:maxLines="1"
                android:text="현재채널"
                android:gravity="left"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginLeft="10dp"
                android:focusable="false"
                android:background="@drawable/menu_ok" />
        </LinearLayout>
        <ImageView
            android:id="@+id/ivLine2"
            android:layout_width="270dp"
            android:layout_height="1dp"
            android:focusable="false"
            android:layout_gravity="center"
            android:background="@drawable/broadmenu_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp">
            <TextView
                android:id="@+id/txtNextTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05시13분"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#ffcf01"
                android:textSize="17sp"/>
            <TextView
                android:id="@+id/txtNextBroad"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:maxLines="1"
                android:text="다음방송"
                android:gravity="left"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:focusable="false"
        android:padding="8dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/nowbroad"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/txtNowChannel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="현재채널"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>