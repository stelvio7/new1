<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="horizontal" android:background="@drawable/bg">
	
	<ImageView
		android:visibility="gone"
	    android:id="@+id/tel"
	    android:layout_width="680dp"
	     android:layout_height="60dp"
	     android:paddingLeft="18dp"
	     android:layout_alignParentLeft="true"
	     android:layout_alignParentBottom="true">
	</ImageView>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:visibility="gone"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
        <ImageView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day0"
		    android:layout_marginBottom="7dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginBottom="7dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate2"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:layout_marginLeft="5dp"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginRight="6dp"
		    />
    </LinearLayout>
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		>
		<ImageView
			android:id="@+id/backImage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/page_back1"/>
	</LinearLayout>
	<LinearLayout
		android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_lock_on"/>
        <ImageView
            android:id="@+id/imgNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_net_on"/>
     </LinearLayout>
	<LinearLayout
	    android:id="@+id/linearLayout1"
	    android:layout_width="wrap_content"
	    android:layout_height="fill_parent"
	    android:layout_centerInParent="true"
		android:padding="25dp"
		android:layout_marginTop="90dp"
		android:layout_marginBottom="90dp"
		android:background="@drawable/view_drama_back"
	    android:orientation="vertical" >

		<ImageView
			android:id="@+id/imageView2"
			android:layout_weight="0.4"
			android:layout_marginBottom="30dp"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginRight="15dp"
			android:src="@drawable/payment_banner" />

		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_weight="1"
			android:orientation="vertical">
			<ImageView
				android:layout_marginLeft="20dp"
				android:layout_marginTop="2dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:src="@drawable/pay_text" />
			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:paddingLeft="55dp"
				android:paddingRight="24dp"
				android:gravity="center_vertical"
				android:layout_centerInParent="true"
				android:orientation="horizontal"
				android:layout_gravity="center"
				android:background="@drawable/payment_text" >
				<EditText
					android:id="@+id/rechargeNum1"
					android:layout_width="100dp"
					android:layout_height="60dp"
					android:layout_weight="1"
					android:layout_marginRight="40dp"
					android:maxLength="4"
					android:textSize="56sp"
					android:textColor="#0070c0"
					android:background="@null"
					android:gravity="center"
					android:maxLines="1"/>
				<EditText
					android:id="@+id/rechargeNum2"
					android:layout_width="100dp"
					android:layout_height="60dp"
					android:layout_weight="1"
					android:layout_marginRight="35dp"
					android:textSize="56sp"
					android:maxLength="4"
					android:textColor="#0070c0"
					android:background="@null"
					android:maxLines="1"
					android:gravity="center"/>
				<EditText
					android:id="@+id/rechargeNum3"
					android:layout_width="100dp"
					android:layout_height="60dp"
					android:layout_weight="1"
					android:layout_marginRight="30dp"
					android:textSize="56sp"
					android:maxLength="4"
					android:textColor="#0070c0"
					android:background="@null"
					android:maxLines="1"
					android:gravity="center"/>

				<EditText
					android:id="@+id/rechargeNum4"
					android:layout_width="100dp"
					android:layout_height="60dp"
					android:layout_marginRight="32dp"
					android:textSize="56sp"
					android:layout_weight="1"
					android:gravity="center"
					android:maxLength="4"
					android:textColor="#0070c0"
					android:background="@null"
					android:maxLines="1" />
				<Button
					android:id="@+id/rechargeok"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:background="@drawable/payment_ok_button"/>
			</LinearLayout>

			<ImageView
				android:id="@+id/imageView3"
				android:layout_marginLeft="13dp"
                android:layout_marginTop="40dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="top"
				android:src="@drawable/image_payment_help" />
		</LinearLayout>
	</LinearLayout>

</RelativeLayout>