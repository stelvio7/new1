<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" android:background="@drawable/batang">
	<ImageView
		android:visibility="gone"
	    android:id="@+id/tel"
	    android:layout_width="680dp"
	     android:layout_height="60dp"
	     android:paddingLeft="18dp"
	     android:layout_alignParentLeft="true"
	     android:layout_alignParentBottom="true">
	</ImageView>
	<ImageView
		android:id="@+id/backImage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:focusable="false"
		android:layout_alignParentBottom="true"
		android:background="@drawable/page_back1"/>
    <LinearLayout
		android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
        <ImageView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day0"
		    android:layout_marginBottom="7dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginBottom="7dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate2"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:layout_marginLeft="5dp"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginRight="6dp"
		    />
    </LinearLayout>
	<LinearLayout
		android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_lock_on"/>
        <ImageView
            android:id="@+id/imgNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_net_on"/>
     </LinearLayout>
     <LinearLayout
        android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="120dp"
	    android:gravity="center"
	    android:orientation="vertical">
     	<ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/child_safe"/>
		 <LinearLayout
			 android:layout_marginTop="30dp"
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:orientation="horizontal">
			 <LinearLayout
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:gravity="center_horizontal"
				 android:layout_margin="10dp"
				 android:background="@drawable/child_12">
				 <ToggleButton
					 android:id="@+id/toggleBtn1"
					 android:layout_gravity="bottom"
					 android:layout_marginBottom="8dp"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:background="@drawable/button_safe_12"
					 />
			 </LinearLayout>
			 <LinearLayout
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:gravity="center_horizontal"
				 android:layout_margin="10dp"
				 android:background="@drawable/child_15">
				 <ToggleButton
					 android:id="@+id/toggleBtn2"
					 android:layout_gravity="bottom"
					 android:layout_marginBottom="8dp"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:background="@drawable/button_safe_12"
					 />
			 </LinearLayout>
			 <LinearLayout
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:gravity="center_horizontal"
				 android:layout_margin="10dp"
				 android:background="@drawable/child_19">
				 <ToggleButton
					 android:id="@+id/toggleBtn3"
					 android:layout_gravity="bottom"
					 android:layout_marginBottom="8dp"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:background="@drawable/button_safe_12"
					 />
			 </LinearLayout>
			 <LinearLayout
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:gravity="center_horizontal"
				 android:layout_margin="10dp"
				 android:background="@drawable/child_confirm">
				 <EditText
					 android:id="@+id/editPasswd"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_marginTop="70dp"
					 android:textColor="#FFFFFF"
					 android:gravity="center"
					 android:textSize="36sp"
					 android:inputType="number"
					 android:text=""
					 android:maxLength="4"
					 android:background="@null"
					 android:maxLines="1"/>
				 <Button
					 android:id="@+id/btnSave"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_gravity="bottom"
					 android:layout_marginBottom="8dp"
					 android:background="@drawable/button_safe_save" />
			 </LinearLayout>
			 <LinearLayout
				 android:layout_width="wrap_content"
				 android:layout_height="wrap_content"
				 android:gravity="center_horizontal"
				 android:layout_margin="10dp"
				 android:background="@drawable/child_modify">
				 <EditText
					 android:id="@+id/editPasswdNow"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_marginTop="70dp"
					 android:textColor="#FFFFFF"
					 android:gravity="center"
					 android:textSize="36sp"
					 android:inputType="number"
					 android:text=""
					 android:maxLength="4"
					 android:background="@null"
					 android:maxLines="1"/>
				 <EditText
					 android:id="@+id/editPasswdConfirm"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:layout_marginTop="180dp"
					 android:textColor="#FFFFFF"
					 android:gravity="center"
					 android:textSize="36sp"
					 android:inputType="number"
					 android:text=""
					 android:maxLength="4"
					 android:background="@null"
					 android:maxLines="1"/>
				 <Button
					 android:id="@+id/btnModify"
					 android:layout_gravity="bottom"
					 android:layout_marginBottom="8dp"
					 android:layout_width="wrap_content"
					 android:layout_height="wrap_content"
					 android:background="@drawable/button_safe_modify"
					 />
			 </LinearLayout>
		 </LinearLayout>
		 <ImageView
			 android:layout_width="wrap_content"
			 android:layout_height="wrap_content"
			 android:layout_marginRight="120dp"
			 android:layout_gravity="right"
			 android:background="@drawable/child_pass"/>
     </LinearLayout>

    <LinearLayout
        android:id="@+id/ll"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true"
	    android:background="@drawable/image_safe_box"
	    android:orientation="vertical">
	    <EditText
	        android:id="@+id/editPasswd"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="325dp"
	        android:layout_marginTop="42dp"
	        android:textColor="#FFFFFF"
	        android:gravity="center"
	        android:textSize="36sp"
	        android:inputType="number"
	        android:text=""
	        android:maxLength="4"
	        android:background="@drawable/button_safe_off"
	        android:maxLines="1"/>
	     <ImageButton
	        android:id="@+id/btnChild"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="325dp"
	        android:layout_marginTop="21dp"
	        android:windowSoftInputMode="stateHidden"
	        android:background="@drawable/button_safe_on_"/>
	    <EditText
	        android:id="@+id/editPasswdModify"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="325dp"
	        android:layout_marginTop="21dp"
	        android:textColor="#FFFFFF"
	         android:inputType="number"
	        android:textSize="36sp"
	        android:gravity="center"
	        android:text=""
	        android:maxLength="4"
	        android:background="@drawable/button_safe_off"
	        android:maxLines="1"/>
	    </LinearLayout>
	     <LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
		 android:layout_centerHorizontal="true"
	    android:orientation="vertical">
		<ImageButton
		       android:id="@+id/btnSend"
		       android:layout_width="wrap_content"
		       android:layout_height="wrap_content"
		       android:layout_marginBottom="120dp"
		       android:windowSoftInputMode="stateHidden"
		       android:background="@drawable/button_safe_save"></ImageButton>
	</LinearLayout>
	    
    
</RelativeLayout>