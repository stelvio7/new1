<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:layout_gravity="center"
	android:orientation="horizontal"
	tools:context=".Constant"
	android:background="@drawable/batang">

	<ImageView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:focusable="false"
		android:background="@drawable/movie_play_bg1"/>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:layout_centerHorizontal="true"
		android:layout_centerVertical="true"
		android:layout_gravity="center"
		android:orientation="horizontal">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="72dp"
			android:orientation="vertical"
			android:background="@drawable/ad_border"
			android:padding="3dp">
			<ImageView
				android:id="@+id/adLeft"
				android:layout_width="406dp"
				android:layout_height="536dp"
				android:focusable="false" />
			<Button
				android:id="@+id/adLeft2"
				android:visibility="gone"
				android:layout_marginTop="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/ad_left"
				android:focusable="false" />
		</LinearLayout>
		<LinearLayout
			android:id="@+id/rl"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="vertical">
			<Button android:id="@+id/movieplay"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginTop="1dp"
				android:background="@drawable/movieplay"
				/>
			<Button android:id="@+id/movieadd"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginBottom="1dp"
				android:background="@drawable/movieadd"
				/>
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="72dp"
			android:orientation="vertical"
			android:background="@drawable/ad_border"
			android:padding="3dp">
			<ImageView
				android:id="@+id/adRight"
				android:layout_width="406dp"
				android:layout_height="536dp"
				android:focusable="false" />
			<Button
				android:id="@+id/adRight2"
				android:visibility="gone"
				android:layout_marginTop="10dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:background="@drawable/ad_right"
				android:focusable="false" />
		</LinearLayout>
	</LinearLayout>
	<ImageView
		android:id="@+id/backImage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:focusable="false"
		android:layout_alignParentBottom="true"
		android:background="@drawable/page_back2"/>
</RelativeLayout>
