<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  android:background="@drawable/batang" >
	<ImageView
	    android:id="@+id/menu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerHorizontal="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="10dp"
	    android:src="@drawable/list_genre_button"
	    android:focusable="false"
	    android:visibility="gone"
	     />
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerHorizontal="true"
		android:layout_alignParentBottom="true"
		android:orientation="horizontal"
		>
		<ImageView
			android:id="@+id/backImage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:background="@drawable/page_back1"/>
	</LinearLayout>
	<ImageView
		android:visibility="gone"
	    android:id="@+id/tel"
	    android:layout_width="680dp"
	     android:layout_height="60dp"
	     android:paddingLeft="18dp"
	     android:layout_alignParentLeft="true"
	     android:layout_alignParentBottom="true">
	</ImageView>
	<RelativeLayout 
	    android:paddingTop="6dp"
	    android:id="@+id/rlMenu"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:visibility="gone">
	    <ImageView

		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:paddingTop="4dp"
		    android:src="@drawable/list_genre_batang"
		    android:focusable="false"
		     />
	 	<LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginTop="10dp"
        android:orientation="horizontal">
        
        <ImageView
            android:id="@+id/btnMenu1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusRight="@+id/btnMenu2"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu1"
            android:nextFocusRight="@+id/btnMenu3"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu2"
            android:nextFocusRight="@+id/btnMenu4"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu3"
            android:nextFocusRight="@+id/btnMenu5"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu4"
            android:nextFocusRight="@+id/btnMenu6"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu5"
            android:nextFocusRight="@+id/btnMenu7"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu6"
            android:nextFocusRight="@+id/btnMenu8"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu7"
            android:nextFocusRight="@+id/btnMenu9"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu8"
            android:nextFocusRight="@+id/btnMenu10"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
        <ImageView
            android:id="@+id/btnMenu10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nextFocusLeft="@+id/btnMenu9"
            android:padding="0dp"
            android:focusable="true"
            android:background="@drawable/genre_cast_baby_baby_button" />
    </LinearLayout>
	</RelativeLayout>
	
	<com.new1.settop.shopping.ShoppingCoverFlow
		android:id="@+id/coverflow"
		android:layout_width="match_parent"
		android:layout_height="470dp" 
		android:layout_centerInParent="true"
		/>
	<!--android:nextFocusUp="@+id/searchText"-->
	
	<TextView  
	    android:id="@+id/coverflowtext"
	    android:focusable="false"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:textColor="#ffffff"
	    android:textSize="20sp"
	    android:layout_below="@id/coverflow"
	    android:layout_centerHorizontal="true"
	     />
	<ImageView android:id="@+id/arrowleft"
	    android:focusable="false"
	    android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:src="@drawable/arrow_left"
	     android:layout_alignParentLeft="true"
	     android:layout_centerVertical="true"
	     android:layout_marginLeft="20dp"
	    >
	</ImageView>
	
	 <ImageView android:id="@+id/arrowright"
	     android:focusable="false"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:src="@drawable/arrow_right"
	     android:layout_alignParentRight="true"
	     android:layout_centerVertical="true"
	     android:layout_marginRight="20dp"
	    >
	</ImageView>
	<LinearLayout
		android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
        <ImageView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day0"
		    android:layout_marginBottom="7dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginBottom="7dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate2"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:layout_marginLeft="5dp"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginRight="6dp"
		    />
    </LinearLayout>
	<LinearLayout
		android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="22dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_lock_on"/>
        <ImageView
            android:id="@+id/imgNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_net_on"/>
     </LinearLayout>
