<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"  android:background="#000000" >
	<com.new1.settop.shopping.ShoppingDetailCoverFlow
		android:id="@+id/coverflow"
		android:layout_width="match_parent"
		android:layout_height="match_parent" 
		android:focusable="true"
		android:layout_centerInParent="true"/>
	<ImageView
	    android:id="@+id/tel"
	    android:visibility="gone"
	    android:layout_width="420dp"
	     android:layout_height="110dp"
	     android:layout_alignParentLeft="true"
	     android:focusable="false"
	     android:layout_alignParentBottom="true">
	</ImageView>
	<TextView  
	    android:id="@+id/coverflowtext"
	    android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:textColor="#ffffff"
	     android:textSize="20sp"
	     android:focusable="false"
	     android:layout_below="@id/coverflow"
	     android:layout_centerHorizontal="true"
	     />
	
	<ImageView 
	    android:id="@+id/arrowleft"
	    android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:src="@drawable/arrow_left"
	     android:focusable="false"
	     android:layout_alignParentLeft="true"
	     android:layout_centerVertical="true"
	     android:layout_marginLeft="20dp"
	     android:alpha="0.7"
	    >
	</ImageView>
	
	 <ImageView  android:id="@+id/arrowright"
	     android:layout_width="wrap_content"
	     android:layout_height="wrap_content"
	     android:src="@drawable/arrow_right"
	     android:focusable="false"
	     android:layout_alignParentRight="true"
	     android:layout_centerVertical="true"
	     android:layout_marginRight="20dp"
	     android:alpha="0.7"
	    >
	</ImageView>
	
   <LinearLayout 
       android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        >
        <ImageView android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day0"
		    android:layout_marginBottom="15dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginBottom="15dp"
		    />
		<Button android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:id="@+id/imgExpireDate2"
		    android:textColor="#ffffff"
		    android:textSize="20sp"
		    android:focusable="false"
		    android:layout_marginLeft="5dp"
		    android:textScaleX="0.9"
		    android:text="00"
		    android:background="@drawable/background_day"
		    android:layout_marginRight="6dp"
		    />
    </LinearLayout>
	<LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:paddingRight="23dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" 
        android:visibility="gone"
        
        >
        <ImageView
            android:id="@+id/imgLock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:padding="0dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_lock_on"/>
        <ImageView
            android:id="@+id/imgNet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/image_main_net_on"/>
     </LinearLayout>
</RelativeLayout>